<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.5.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="SaleOfSpareParts">
        <createTable tableName="POSITION_FOR_SALE_PURCHASE_LINK">
            <column name="POSITION_FOR_SALE_ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_POSITIONFORSALEPURCHASELINK"/>
            </column>
            <column name="PURCHASE_ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_POSITIONFORSALEPURCHASELINK"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="2" author="SaleOfSpareParts">
        <addForeignKeyConstraint baseColumnNames="PURCHASE_ID" baseTableName="POSITION_FOR_SALE_PURCHASE_LINK"
                                 constraintName="FK_POSFORSALPUR_ON_PURCHASE" referencedColumnNames="ID"
                                 referencedTableName="PURCHASE"/>
    </changeSet>
    <changeSet id="3" author="SaleOfSpareParts">
        <addForeignKeyConstraint baseColumnNames="POSITION_FOR_SALE_ID" baseTableName="POSITION_FOR_SALE_PURCHASE_LINK"
                                 constraintName="FK_POSFORSALPU_ON_POSITIONFOR" referencedColumnNames="ID"
                                 referencedTableName="POSITION_FOR_SALE"/>
    </changeSet>
    <changeSet id="4" author="SaleOfSpareParts">
        <dropColumn columnName="purchase_id" tableName="position_for_sale"/>
    </changeSet>
</databaseChangeLog>